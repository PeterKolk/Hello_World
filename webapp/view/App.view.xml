<mvc:View controllerName="HelloWorld.HelloWorld.controller.App" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m">
	<App id="idAppControl">
		<pages>
			<Page title="{i18n>title}">
				<content>
					<Input
    					value="{/recipient/name}"
    					description="Hello {/recipient/name}"
    					valueLiveUpdate="true"
    					width="60%"/>
					<Button id = "button1" text = "{i18n>showHelloButtonText}" press="onShowHello"/>
					
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>