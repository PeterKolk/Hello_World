<mvc:View
   controllerName="HelloWorld.HelloWorld.controller.InvoiceList"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">
   <List
	  id="invoiceList"
      class="sapUiResponsiveMargin"
      width="auto"
      items="{
         path : 'invoice>/MONITORING'
      }" >
   	<headerToolbar>
         <Toolbar>
            <Title text="{i18n>invoiceListTitle}"/>
            <ToolbarSpacer/>
            <SearchField width="50%" search="onFilterInvoices"/>
         </Toolbar>
      </headerToolbar>
      <items>
         <ObjectListItem
            title="{
            	path: 'invoice>timestamp_occurence',
            	type: 'sap.ui.model.type.Date',
    			formatOptions: {style: 'medium'}
            }"
            number="{
				parts: [{path: 'invoice>entries'}, {path: 'view>/unit'}],
				type: 'sap.ui.model.type.Unit',
				formatOptions: {
					showMeasure: false
				}
			}"
			numberUnit="{view>/unit}"
			type="Navigation"
			press="onPress">
         	
			</ObjectListItem>
      </items>
   </List>
</mvc:View>